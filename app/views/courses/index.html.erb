<% content_for :title do %>
    <% 'OpenSplitTime: Courses' %>
<% end %>

<div class="row header">
  <div class="col-xs-5">
    <h2>
      <strong>Courses</strong>
    </h2>
  </div>
  <div class="col-xs-7 page-navigation">
    <div class="row">
      <% if @current_user %>
          <%= link_to 'Create new course', new_course_path,
                      class: 'btn btn-sm btn-success' %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-8">
    <%= paginate(@courses) %>
  </div>
</div>

<%= render 'courses', courses: @courses %>

<hr>
<div class="row">
  <div class="col-xs-8">
    <%= paginate(@courses) %>
  </div>
</div>
